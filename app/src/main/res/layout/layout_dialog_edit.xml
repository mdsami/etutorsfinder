<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Edit Phone TextInputLayout -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_phone"
                android:hint="New Phone Number"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:drawableLeft="@drawable/ic_phone"/>

        </android.support.design.widget.TextInputLayout>

        <!-- Edit Class TextInputLayout -->
        <android.support.design.widget.TextInputLayout
            android:visibility="gone"
            android:id="@+id/til_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_class"
                android:hint="New Class You're On"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_class"
                android:drawableLeft="@drawable/ic_class"/>

        </android.support.design.widget.TextInputLayout>

        <!-- Edit School/College/University TextInputLayout -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_institute"
                android:hint="New School/College/University"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_institution"
                android:drawableLeft="@drawable/ic_institution"/>

        </android.support.design.widget.TextInputLayout>

        <!-- Edit Address TextInputLayout -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_address"
                android:hint="New Address"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_address"
                android:drawableLeft="@drawable/ic_address"/>

        </android.support.design.widget.TextInputLayout>

        <!-- Edit Address Interested Field -->
        <android.support.design.widget.TextInputLayout
            android:visibility="gone"
            android:id="@+id/til_interested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_interested"
                android:hint="Interested Subject"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_book"
                android:drawableLeft="@drawable/ic_book"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</ScrollView>